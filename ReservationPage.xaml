<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PensiuneApp2.ReservationPage"
             Title="Rezervare Nouă">
    <StackLayout Margin="20" Spacing="10">

        <Label Text="Selectează Camera:" FontAttributes="Bold" />
        <Picker x:Name="RoomPicker" Title="Alege o cameră" />

        <Label Text="Nume Client:" FontAttributes="Bold" />
        <Entry Text="{Binding CustomerName}" Placeholder="Introduceți numele" />

        <Label Text="Data Check-In:" FontAttributes="Bold" />
        <DatePicker Date="{Binding CheckIn}" />

        <Label Text="Data Check-Out:" FontAttributes="Bold" />
        <DatePicker Date="{Binding CheckOut}" />

        <Button Text="Salvează Rezervarea" 
                Clicked="OnSaveButtonClicked" 
                BackgroundColor="Green" 
                TextColor="White" 
                Margin="0,20,0,0" />

        <ListView x:Name="listViewReservations" ItemSelected="OnReservationSelected" HeightRequest="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding CheckIn, StringFormat='{0:dd/MM/yyyy}'}" 
                      Detail="ID Rezervare: {Binding ID}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Șterge Rezervare" Clicked="OnDeleteButtonClicked" BackgroundColor="Red" />
        
    </StackLayout>
</ContentPage>
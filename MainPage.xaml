<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PensiuneApp2.MainPage"
             Title="Acasă"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="20" RowSpacing="20">

            <Border Grid.Row="0" 
                    StrokeShape="RoundRectangle 15" 
                    StrokeThickness="0"
                    HeightRequest="200"
                    HorizontalOptions="Fill">
                <Grid>
                    <Image Source="pensiune_cover.jpg" 
                           Aspect="AspectFill" 
                           Opacity="0.8"/>

                    <BoxView Color="Black" Opacity="0.4"/>

                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="Pensiunea Visurilor" 
                               TextColor="White" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Administrare Simplă &amp; Rapidă" 
                               TextColor="#E0E0E0" 
                               FontSize="16" 
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Grid>
            </Border>

            <Label Grid.Row="1" 
                   Text="Ce doriți să gestionați astăzi?" 
                   FontSize="18" 
                   TextColor="#333" 
                   FontAttributes="Bold"
                   Margin="5,0,0,0"/>

            <Grid Grid.Row="2" ColumnDefinitions="*,*" RowDefinitions="120, 120" ColumnSpacing="15" RowSpacing="15">

                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="#2D3E50"
                        StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReservationsClicked"/>
                    </Border.GestureRecognizers>

                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Label Text="📅" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Rezervări Noi" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="Adaugă sau vezi rezervări" TextColor="#B0BEC5" FontSize="12"/>
                    </StackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="0"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="White"
                        Stroke="LightGray"
                        StrokeThickness="1">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRoomsClicked"/>
                    </Border.GestureRecognizers>

                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="🛏️" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Camere" TextColor="#333" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="1"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="White"
                        Stroke="LightGray"
                        StrokeThickness="1">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnClientsClicked"/>
                    </Border.GestureRecognizers>

                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="👥" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Clienți" TextColor="#333" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
            </Grid>

            <Frame Grid.Row="3" 
                   BackgroundColor="#E3F2FD" 
                   BorderColor="Transparent" 
                   CornerRadius="10" 
                   Margin="0,20,0,0">
                <StackLayout Spacing="5">
                    <Label Text="Statistici Rapide:" FontAttributes="Bold" TextColor="#1565C0"/>
                    <Label Text="• Verifică disponibilitatea camerelor înainte de rezervare." TextColor="#555" FontSize="12"/>
                    <Label Text="• Asigură-te că datele clienților sunt complete." TextColor="#555" FontSize="12"/>
                </StackLayout>
            </Frame>

        </Grid>
    </ScrollView>
</ContentPage>